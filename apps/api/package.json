{
  "name": "@vtexday26/api",
  "version": "1.0.0",
  "description": "VTEX Day 2026 Backend API",
  "private": true,
  "scripts": {
    "build": "nest build && cp -r dist/apps/api/src/* dist/ 2>/dev/null || true",
    "start": "nest start",
    "dev": "nest start --watch",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/apps/api/src/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest --maxWorkers=2",
    "test:watch": "jest --watch --maxWorkers=2",
    "test:cov": "jest --coverage --maxWorkers=2 --testPathIgnorePatterns='/integration/'",
    "test:cov:all": "jest --coverage --maxWorkers=1",
    "test:unit": "jest --testPathIgnorePatterns='/integration/' --maxWorkers=2",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "seed": "ts-node -r tsconfig-paths/register src/seeds/seed.ts",
    "seed:prod": "node dist/seeds/seed.js"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.896.0",
    "@aws-sdk/s3-request-presigner": "^3.896.0",
    "@nestjs/bull": "^11.0.3",
    "@nestjs/cache-manager": "^3.0.1",
    "@nestjs/common": "^10.3.0",
    "@nestjs/config": "^3.1.1",
    "@nestjs/core": "^10.3.0",
    "@nestjs/jwt": "^10.2.0",
    "@nestjs/mongoose": "^10.0.2",
    "@nestjs/passport": "^10.0.3",
    "@nestjs/platform-express": "^10.3.0",
    "@nestjs/swagger": "^8.1.1",
    "@nestjs/throttler": "^6.4.0",
    "@types/bull": "^3.15.9",
    "@types/cookie-parser": "^1.4.9",
    "@types/jsdom": "^21.1.7",
    "@types/multer": "^2.0.0",
    "@types/node-cron": "^3.0.11",
    "@types/sanitize-html": "^2.16.0",
    "@types/sharp": "^0.31.1",
    "@types/uuid": "^10.0.0",
    "@vtexday26/shared": "^1.0.0",
    "aws-sdk": "^2.1692.0",
    "bcrypt": "^5.1.1",
    "bull": "^4.16.5",
    "cache-manager": "^7.2.2",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "cookie-parser": "^1.4.7",
    "dompurify": "^3.2.7",
    "isomorphic-dompurify": "^2.28.0",
    "jsdom": "^27.0.0",
    "mongoose": "^8.0.3",
    "node-cron": "^4.2.1",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "reflect-metadata": "^0.2.1",
    "rss": "^1.2.2",
    "rxjs": "^7.8.1",
    "sanitize-html": "^2.17.0",
    "sharp": "^0.34.4",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.2.1",
    "@nestjs/schematics": "^10.0.3",
    "@nestjs/testing": "^10.3.0",
    "@types/bcrypt": "^5.0.2",
    "@types/dompurify": "^3.0.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.11.0",
    "@types/passport-jwt": "^4.0.0",
    "@types/passport-local": "^1.0.38",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^6.18.1",
    "@typescript-eslint/parser": "^6.18.1",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "jest": "^29.7.0",
    "mongodb-memory-server": "^10.2.1",
    "prettier": "^3.1.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.spec.ts",
      "!src/**/*.interface.ts",
      "!src/**/*.module.ts",
      "!src/main.ts",
      "!src/**/*.dto.ts"
    ],
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/",
      "/tests/"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/tests/"
    ],
    "maxWorkers": 2,
    "testTimeout": 30000,
    "bail": false,
    "cache": true,
    "cacheDirectory": "<rootDir>/.jest-cache",
    "coverageReporters": [
      "text-summary",
      "lcov"
    ],
    "testPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ],
    "watchPathIgnorePatterns": [
      "/node_modules/",
      "/dist/",
      "/coverage/"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/",
      "<rootDir>/coverage/"
    ],
    "moduleNameMapper": {
      "@shared/(.*)": "<rootDir>/../../packages/shared/src/$1",
      "@modules/(.*)": "<rootDir>/src/modules/$1",
      "@common/(.*)": "<rootDir>/src/common/$1"
    }
  }
}
